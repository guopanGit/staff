/* 同行业对比.ttss */

@import url('/css/icon.ttss');

.wrap{
    padding: 0 28rpx 40rpx;
}

.resultWrap{
    width: 694rpx;
    height: 274rpx;
    margin-top: 40rpx;
    padding: 42rpx 20rpx 0;
    border-radius: 24rpx;
    background-color: #3D74F3;
}

.ityemWrap{
    display: flex;
    justify-content: space-between;
    font-size: 28rpx;
    color: #fff;
}

.time{
    margin-top: 20rpx;
    font-size: 28rpx;
    color: rgba(255,255,255,0.8);
}

.nameWrap{
    width: 652rpx;
    margin-top: 32rpx;
    position: relative;
}

.blue{
    width: 350rpx;
    height: 88rpx;
    position: absolute;
    right: 0;
}

.red{
    width: 350rpx;
    height: 88rpx;
    position: absolute;
    left: 0;
}

.itemName{
    position: relative;

}

.name{
  display: inline-block;
  width: 300rpx;
  height: 88rpx;
  line-height: 88rpx;
  padding-left: 10rpx;
  text-align: center;
  word-break:keep-all;
  white-space:nowrap;
  overflow:hidden;
  text-overflow:ellipsis;
  font-size: 36rpx;
  color: #fff;
}

.mr40{
    margin-right: 40rpx;
}